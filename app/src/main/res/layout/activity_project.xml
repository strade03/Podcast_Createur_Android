<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0">
        
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37474F"
        android:padding="16dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/txtProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Émission"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Toolbar Actions : Boutons Textes Uniquement -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Bouton Enregistrer -->
        <Button
            android:id="@+id/btnRecordNew"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Enregistrer"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            android:layout_marginEnd="4dp"
            app:cornerRadius="8dp"/>

        <!-- Bouton Importer -->
        <Button
            android:id="@+id/btnImportFile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Importer"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:cornerRadius="8dp"/>
            
        <!-- Bouton Fusionner (anciennement Export) -->
        <Button
            android:id="@+id/btnMergeProject"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Fusionner"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#388E3C"
            android:layout_marginStart="4dp"
            app:cornerRadius="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maintenez appuyé pour déplacer l'ordre"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#757575"
        android:paddingBottom="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

</LinearLayout>