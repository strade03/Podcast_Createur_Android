<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0">

    
    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#37474F"
        android:padding="16dp"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/txtProjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Émission"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Toolbar Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Bouton Enregistrer (Standard avec Texte) -->
        <Button
            android:id="@+id/btnRecordNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="REC"
            android:textColor="#FFFFFF"
            android:backgroundTint="#D32F2F"
            app:icon="@drawable/ic_record"
            app:iconTint="#FFFFFF"
            android:layout_marginEnd="4dp"/>

        <!-- Bouton Importer (Standard avec Texte) -->
        <Button
            android:id="@+id/btnImportFile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IMPORT"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            app:icon="@drawable/ic_open_folder"
            app:iconTint="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>
            
        <!-- Bouton Exporter -->
        <Button
            android:id="@+id/btnMergeProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="EXPORT"
            android:textColor="#FFF"
            android:backgroundTint="#388E3C"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maintenez appuyé pour déplacer l'ordre"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#757575"
        android:paddingBottom="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewClips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"/>

    

</LinearLayout>